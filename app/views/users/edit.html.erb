<h2>User Info</h2>

<% if @user.errors.any? %>
  <%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <div>
    <p>Name</br>
    <%= f.text_field :name %></p>
  </div>
  <p>Image</br>
  <%= f.file_field :profile_image, accept: "image/*" %></p>
  <p>Introduction</br>
  <%= f.text_area :introduction %></p>
  <%= f.submit 'Update User' %>
<% end %>