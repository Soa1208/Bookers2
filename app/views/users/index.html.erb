<div class="container">
 <div class="row">
    <div class="col-md-3">
        <%= render 'books/list', book: @book %>
    </div>

    <div class="col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class="table">
     <thead>
      <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
      </tr>
      <tr>
        <% @users.each do |user| %>
         <td><p><%= image_tag user.get_profile_image %></p></td>
         <td><p><%= user.name %></p></td>
         <td><p><%= link_to "Show", user_path(user) %></p></td>
        <% end %>
      </tr>
     </thead>
    </table>
    </div>
 </div>
</div>