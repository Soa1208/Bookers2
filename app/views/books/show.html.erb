<%= flash[:notice] %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book_new, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
       <thead>
        <tr>
         <td><p><%= link_to image_tag(@book.user.get_profile_image), user_path(@book.user.id) %></p></td>
         <td><p><%= link_to @book.title, book_path(@book) %></p></td>
         <td><p><%= @book.body %></p></td>
         <td><p><%= link_to @book.user.name, user_path(@book.user.id) %></p></td>
         <td>
            <% if @book.user == current_user %>
              <p><%= link_to "Edit", edit_book_path(@book) %></p>
            <% end %>
          </td>
         <td>
            <% if @book.user == current_user %>
              <p><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %></p>
            <% end %>
          </td>
        </tr>
       </thead>
      </table>
    </div>
  </div>
</div>