<% if @book.errors.any? %>
  <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
       <thead>
        <tr>
         <th>Title</th>
         <th>Opinion</th>
         <th colspan="3"></th>
        </tr>
        <tr>
          <% @books.each do |book| %>
           <td><p><%= link_to image_tag(book.user.get_profile_image), user_path(book) %></p></td>
           <td><p><%= link_to book.title, book_path(book) %></p></td>
           <td><p><%= book.body %></p></td>
          <% end %>
        </tr>
       </thead>
      </table>
    </div>
  </div>
</div>