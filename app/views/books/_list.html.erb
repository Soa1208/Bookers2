<h1>User info</h1>
<% if @book.present? %>
  <p><%= image_tag @book.user.get_profile_image %></p>
  <p><%= @book.user.name %></p>
  <p><%= @book.user.introduction %></p>
  <% if current_user != @book.user %>
    <%= link_to 'View Current User', user_path(current_user) %>
  <% else %>
    <%= link_to 'Edit', edit_book_path(current_user) %>
  <% end %>
<% elsif @user.present? %>
  <p><%= image_tag @user.get_profile_image %></p>
  <p><%= @user.name %></p>
  <p><%= @user.introduction %></p>
  <% if current_user != @user %>
    <%= link_to 'View Current User', user_path(current_user) %>
  <% else %>
    <%= link_to 'Edit', edit_user_path(@user) %>
  <% end %>
<% else %>
  <p><%= image_tag current_user.get_profile_image %></p>
  <p><%= current_user.name %></p>
  <p><%= current_user.introduction %></p>
  <% unless current_user.nil? %>
    <%= link_to 'Edit', edit_user_path(current_user) %>
  <% end %>
<% end %>

