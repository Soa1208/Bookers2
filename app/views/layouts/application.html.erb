<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/225b9663bb.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
        <div class="container">
          <div class="nav-item">
            <a href="/"><strong>Bookers</strong></a>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item mr-3"><%= link_to " Home", user_path(current_user.id), class:"fa-solid fa-house" %></i>
              <li class="nav-item mr-3"><%= link_to " Users", users_path, class:"fa-solid fa-users" %></li>
              <li class="nav-item mr-3"><%= link_to " Books", books_path, class:"fa-solid fa-book-open" %></li>
              <li class="nav-item mr-3"><%= link_to " Log out", destroy_user_session_path, method: :delete, class:"fa-solid fa-right-from-bracket" %></li>
            <% else %>
              <li class="nav-item mr-3"><%= link_to " Home", root_path, class:"fa-solid fa-house" %></i>
              <li class="nav-item mr-3"><%= link_to " About", about_path, class:"fa-solid fa-link" %></li>
              <li class="nav-item mr-3"><%= link_to " Sign up", new_user_registration_path, class:"fa-solid fa-user-plus" %></li>
              <li class="nav-item mr-3"><%= link_to " Log in", new_user_session_path, class:"fa-solid fa-right-to-bracket" %></li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="mt-auto text-center">
      <div class="container">
        <small class="text-muted">
          CopyRight Infratop.inc
        </small>
      </div>
    </footer>
  </body>
</html>
